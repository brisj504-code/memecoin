{
	"name": "MemeCoin Analysis Codespace",
	"build": {
		// Tells Codespaces to use your Dockerfile to build the environment.
		"dockerfile": "../Dockerfile.memecoin",
		// The 'context' is the root of your repository, so the Dockerfile can find everything.
		"context": ".."
	},
	// Optional: Add VS Code extensions you want pre-installed in the Codespace.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	},
	// Forward a port if you were to run a web app, like JupyterLab. Not needed for a script.
	// "forwardPorts": [8888],

	// Command to run after the container is created.
	"postCreateCommand": "echo 'Codespace is ready. Your Python environment is set up!'",

	// Set the user for the container.
	"remoteUser": "root"
}
